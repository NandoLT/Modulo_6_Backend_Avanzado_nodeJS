<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><%= __('Add Product') %></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/" method="post" class="products_form">
                    <div class="form-group">
                        <div class="row">
                            <div class="col">
                                <input type="text" id="name" class="form-control" name="name" placeholder="Nombre" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <input type="text" id="price" class="form-control" name="price" placeholder="Precio" required>
                            </div>
                            <div class="col">
                                <select id="sale" class="form-control" name="sale" placeholder="Seleccione Tipo" required>
                                    <option value="not-valid"><%= __('Select Type') %></option>
                                    <option value="true">>><%= __('Sale') %></option>
                                    <option value="false">>><%= __('Auction') %></option>
                                </select>
                            </div>
                        </div>    
                    </div>
                    <div class="form-group" id="tags-form">
                        <input type="text" name="image" class="form-control" id="image" placeholder="Nombre para image">
                    </div>
                    <div class="form-group" id="tags-form">
                    </div>
                    
                    <button type="button" class="btn btn-secondary" onclick="addTag()"> AÃ±adir Tag</button>
                    <hr>
                    <button class="btn btn-primary"><%= __('Create Product') %></button>
                </form>
                
            </div>

        </div>
    </div>
</div>